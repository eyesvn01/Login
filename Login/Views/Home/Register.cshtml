@model Login.Models.User
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Register";

}
<div class="row justify-content-md-center">
    <div class="col-md-5">

        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Register</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "badge badge-danger" })
                         @if (ViewBag.Error == "ID")
                        {
                            <span class="badge badge-danger">Tài khoản đăng ký đã được sử dụng.</span>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.Error == "Email")
                        {
                            <span class="badge badge-danger">Email đăng ký đã được sử dụng.</span>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmEmail)
                        @Html.TextBoxFor(m => m.ConfirmEmail, "", new { @class = "form-control", @placeholder = "Xác nhận Email" })
                        @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" href="@Url.Action("Login","Home")" name="submit" class="btn btn-danger" value="Register" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
